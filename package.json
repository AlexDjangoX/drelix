{
  "name": "drelix",
  "version": "0.1.0",
  "private": true,
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "cross-env NODE_OPTIONS=--max-old-space-size=8192 vitest",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:convex": "vitest run --config vitest.config.ts tests/convex/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:stress": "playwright test --workers=4 --repeat-each=5",
    "test:load": "artillery run stress/load.yml",
    "test:load:prod": "artillery run stress/load.yml -e prod",
    "test:load:report": "artillery run stress/load.yml --output stress/report.json"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "canvas-confetti": "^1.9.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.31.7",
    "dompurify": "^3.3.1",
    "framer-motion": "^12.29.2",
    "iconv-lite": "^0.7.2",
    "isomorphic-dompurify": "^3.0.0-rc.2",
    "jose": "^6.1.3",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-hook-form": "^7.71.1",
    "resend": "^4.0.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@edge-runtime/vm": "^2.0.0",
    "@playwright/test": "^1.49.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "artillery": "^2.0.29",
    "convex-test": "^0.0.41",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^25.0.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^3.0.0"
  }
}
